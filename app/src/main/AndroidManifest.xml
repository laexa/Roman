<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alexinc.roman">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".acitvity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".acitvity.LearnActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".acitvity.TestActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".acitvity.MenuViewChoise"
            android:screenOrientation="portrait" />

        <activity
            android:name=".acitvity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/themeForMainMenu" />

        <activity android:name=".beta.SplashScreen" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>