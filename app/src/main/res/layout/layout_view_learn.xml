<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorVegetable"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="NestedWeights">

    <View
        android:id="@+id/view_line_top"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@color/colorWhite" />

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/llMainCont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_line_bottom"
        android:layout_below="@id/view_line_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOriginalWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/fruit"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/content_description"
                android:padding="8dp"
                android:src="@drawable/ic_equal" />

            <TextView
                android:id="@+id/tvTranslateWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/fruit"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_image_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_weight="4"
            android:elevation="16dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/ivLearnWord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:contentDescription="@string/content_description"
                android:scaleType="fitCenter" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/previous"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_left" />

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/repeat"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_play_button" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/next"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_right" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
