<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:id="@+id/view_line_top"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@color/colorWhite" />

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/llMainCont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_line_bottom"
        android:layout_below="@id/view_line_top"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_image_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_weight="4"
            android:elevation="16dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/ivThemeKindPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:scaleType="fitCenter" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/llMiddleCont"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBestScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="8dp"
                android:text=" / "
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvTotalPossibleScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_bottom_cont"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="24dp"
            android:paddingStart="24dp">

            <Button
                android:id="@+id/btnLearnGo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/drawable_btn_border_white"
                android:fontFamily="@font/montserrat"
                android:text="@string/training"
                android:textColor="@color/colorWhite"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btnExamGo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/drawable_btn_border_white"
                android:fontFamily="@font/montserrat"
                android:text="@string/exam"
                android:textColor="@color/colorWhite"
                android:textSize="19sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
